<!DOCTYPE html>
<html>
<head>
  <title>Splurty</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="row">
      <div class="col-xs-3">

        <div class="logoReforest">
        	<div class="stripe1"></div>
        	<div class="stripe2"></div>
        	<div class="stripe3"></div>
        	<div class="stripe4"></div>
        	<div class="stripe5"></div>
        </div>
      </div>

      <div class="col-xs-4 slogan">
        Splurting out unsolicited truths regarding your age since 2016
      </div>
      <div class="col-xs-5 links">
        <%= link_to 'Contribute', '#' %>
        <%= link_to 'About', '#' %>
      </div>
    </div>
  </header>
  <hr>

<%= yield %>

</body>
</html>
